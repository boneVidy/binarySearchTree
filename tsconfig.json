{
  "jest": {
      "globals": {
          "ts-jest": {
              "tsConfigFile": "tsconfig.test.json"
          }
      }
  },
  "exclude": [
      "./test/",
      "node_modules"
  ],
  "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
//      "lib": [
//          "es2015",
//          "es2016",
//          "es2017",
//          "esnext"
//      ],
      "downlevelIteration": true,
      "declaration": true,
      "sourceMap": true,
      "outDir": "./lib/es",
      "rootDir": "./src/",
      "strict": true,
      "strictNullChecks": true,
      "alwaysStrict": true,
      "moduleResolution": "node",
      "rootDirs": [
          "./src"
      ],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "sourceRoot": "./src"
  }
}